<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="alan.example.com.persontestdemo">

    <uses-permission android:name="android.permission.CAMERA" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MyThemeBlue">
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".base.activity.nobar.FragmentNoTopBarActivity" />

        <activity android:name=".base.activity.withbar.FragmentTopBarActivity" />

        <activity android:name=".statubar.StatuBarMainActivity" />

        <activity android:name=".recyclerview.RecyclerViewActivity" />

        <activity android:name=".NavHomeActivity" />

        <activity
            android:name=".video.VideoActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait" />

        <activity android:name=".customview.CameraActivity" />
        <activity android:name=".customview.TestCameraActivity" />
        <activity android:name=".camera.CameraTwoActivity" />

        <activity
            android:name=".camera.camera1.CustomCamera"
            android:screenOrientation="portrait" />

        <activity android:name=".camera.camera1.CustomCamera2" />
        <activity android:name=".camera.camera4.Camera4Activity"/>
    </application>

</manifest>